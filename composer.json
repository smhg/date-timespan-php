{
    "name": "smhg/date-timespan",
    "description": "Collection of PHP classes to work with timespans.",
    "license": "MIT",
    "keywords": [
        "timespan"
    ],
    "authors": [
        {
            "name": "smhg",
            "email": "sam@strictlyphp.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.8",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Timespan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Timespan\\": "tests/"
        }
    },
    "scripts": {
      "test": "phpunit",
      "lint": "phpmd src,tests ansi phpmd.xml",
      "analyze": "phpstan analyze"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
